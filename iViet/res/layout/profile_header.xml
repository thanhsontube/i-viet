<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/profile_img_cover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/profile" />
        <!-- 4 buttom -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_bar_cell"
            android:orientation="horizontal" >

            <!-- 1  chinh sua -->

            <LinearLayout
                style="@style/style_img_profile"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/lv1" >

                <!-- 2 ban theo -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/style_txt_profile"
                        android:text="0" />

                    <TextView
                        style="@style/style_txt_profile"
                        android:text="Bạn theo" />
                </LinearLayout>

                <!-- 3 cau hoi -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/style_txt_profile"
                        android:text="0" />

                    <TextView
                        style="@style/style_txt_profile"
                        android:text="Câu hỏi" />
                </LinearLayout>

                <!-- 4 tra loi -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/style_txt_profile"
                        android:text="0" />

                    <TextView
                        style="@style/style_txt_profile"
                        android:text="Trả lời" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- profile picture -->

    <LinearLayout
        style="@style/style_img_profile"
        android:layout_gravity="bottom|left"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/small_avt_frame"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:tag="avatar"
                android:id="@+id/profile_img_avatar"
                android:layout_gravity="center"
                android:background="@drawable/taylor_swift"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <Button
            android:id="@+id/profile_btn_edit"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog_button_common_selector"
            android:gravity="center"
            android:text="Chỉnh sửa"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

</FrameLayout>