<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- mid layout -->

    <TextView
        android:id="@+id/actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dot1"
            style="@style/selected_img_style"
            android:src="@drawable/page_selected" />

        <ImageView
            android:id="@+id/dot2"
            style="@style/selected_img_style"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/page_deselected" />

        <ImageView
            android:id="@+id/dot3"
            style="@style/selected_img_style"
            android:src="@drawable/page_deselected" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_chat"
        style="@style/main_img_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/lv1"
        android:src="@drawable/chat_select" />

</RelativeLayout>