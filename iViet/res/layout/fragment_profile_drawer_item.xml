<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:tag="img_button_profile"
            style="@style/main_img_style"
            android:src="@drawable/button_profile_selector" />

        <ImageView
            android:tag="img_hexagon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hexagon_view" />

        <ImageView
            android:tag="img_button_new"
            style="@style/main_img_style"
            android:src="@drawable/button_new_selector" />
    </LinearLayout>

    <!-- User name -->

    <TextView
        android:tag="drawer_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/lv1"
        android:text="@string/app_name"
        android:textStyle="bold" />

</LinearLayout>